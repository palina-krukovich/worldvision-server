<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>controller</servlet-name>
    <servlet-class>com.epam.polinakrukovich.worldvision.controller.Controller</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <!-- users -->
  <servlet-mapping>
    <servlet-name>controller</servlet-name>
    <url-pattern>/user/create</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>controller</servlet-name>
    <url-pattern>/user/verify</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>controller</servlet-name>
    <url-pattern>/user/delete</url-pattern>
  </servlet-mapping>
  <!-- images -->
  <servlet-mapping>
    <servlet-name>controller</servlet-name>
    <url-pattern>/image/create</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>controller</servlet-name>
    <url-pattern>/image/list/user</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>controller</servlet-name>
    <!-- tags, color, time -->
    <url-pattern>/image/list/query</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>controller</servlet-name>
    <url-pattern>image/list/top</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>controller</servlet-name>
    <url-pattern>/image/delete</url-pattern>
  </servlet-mapping>
  <!-- likes -->
  <servlet-mapping>
    <servlet-name>controller</servlet-name>
    <url-pattern>/like/create</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>controller</servlet-name>
    <url-pattern>/like/delete</url-pattern>
  </servlet-mapping>
  <!-- downloads -->
  <servlet-mapping>
    <servlet-name>controller</servlet-name>
    <url-pattern>/download/create</url-pattern>
  </servlet-mapping>
</web-app>
