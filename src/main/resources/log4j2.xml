<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" strict="true" name="AppLogConfig">
    <Appenders>
        <Appender type="File" name="File" fileName="logs/app.log">
            <Layout type="PatternLayout">
                <Pattern>%d{DATE} [%t] %-5p %c{5} - %m%n</Pattern>
            </Layout>
        </Appender>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>